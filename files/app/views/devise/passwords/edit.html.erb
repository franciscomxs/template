<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put,  class: 'form-signin' }) do |f| %>
  
  <h2>Alterar a senha</h2>
  <%= f.error_notification %>

  <%= f.input :reset_password_token, :as => :hidden %>
  <%= f.full_error :reset_password_token %>

  <div class="form-inputs">
    <%= f.input :password, :label => "New password", :required => true, :autofocus => true %>
    <%= f.input :password_confirmation, :label => "Confirm your new password", :required => true %>
  </div>

  <div class="btn-group dropup">
    <%= f.button :submit, "Resetar", class: 'btn btn-large btn-primary' %>

    <button class="btn btn-large">Mais</button>
    <button class="btn btn-large dropdown-toggle" data-toggle="dropdown">
      <span class="caret"></span>
    </button>
    <ul class="dropdown-menu" style="right: 0; left: auto; z-index:99999;">
      <%= render "devise/shared/links" %>
    </ul>
  </div>

<% end %>